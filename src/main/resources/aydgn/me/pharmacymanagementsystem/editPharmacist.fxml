<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydgn.me.pharmacymanagementsystem.EditPharmacistController">
   <children>
      <Label layoutX="624.0" layoutY="27.0" text="Profile" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
      </Label>
      <HBox layoutX="182.0" layoutY="136.0" prefHeight="584.0" prefWidth="1015.0">
         <children>
            <VBox prefHeight="584.0" prefWidth="507.0">
               <children>
                  <ImageView fitHeight="328.0" fitWidth="507.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../img/user.png" />
                     </image>
                     <VBox.margin>
                        <Insets left="75.0" />
                     </VBox.margin>
                  </ImageView>
                  <Label fx:id="usernameLabel" alignment="CENTER" layoutX="253.0" prefHeight="67.0" prefWidth="506.0" textAlignment="CENTER">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="55.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox prefHeight="584.0" prefWidth="507.0">
               <children>
                  <Label text="Name">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="nameField">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Mobile Number">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="mobileNumberField">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Email">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="emailField">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Address">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="addressField">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateProfile" text="Update">
                           <HBox.margin>
                              <Insets right="40.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../img/save.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButton" text="Back">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../img/cancel_25px.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
